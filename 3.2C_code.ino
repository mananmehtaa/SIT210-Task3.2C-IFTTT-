  ArduinoCloud.printDebugInfo();
}

void loop() {
  ArduinoCloud.update();
  // Your code here 
  float lux = LightSensor.GetLightIntensity();
  intensity = lux;
  if (lux > 300)
  {
    Serial.print("There is sunlight!!!!");
  }
  else
  {
    Serial.print("There is no sunlight!!!!");
  }
  Serial.print("Lux value ");
  Serial.println(intensity);
  delay(5000);
  
}
